<div class="tab-pane" id="Registration">
  <br>
  <%= form_tag varified_otp_index_path, remote: true, :class=> "form-horizontal" do %>
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">
      Otp</label>
      <div class="col-sm-10">
        <%= number_field_tag :otp_code,nil, autofocus: true, :class=> "form-control", :placeholder=> "Enter otp", :autocomplete=> "off" , :required=>true, :id=>"otp_input"%>
        <span id="mobile_otp_error"></span>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-2">
      </div>
      <div class="col-sm-6">
        <%= submit_tag "Submit", class: "btn btn-primary btn-sm" %>
      </div>
       <div class="col-sm-4">
        <%= link_to 'Resend otp', resend_otp_otp_index_path, remote:true%>
      </div>
    </div>
  <%end%>
</div>
