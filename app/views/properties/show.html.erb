<h2><center><%= @property.name %> Property</center></h2><br>
<div style="padding:30px 0;">
  <div id="thumbnail-slider">
    <div class="inner">
      <ul>
        <% if @property.photos.present? %>
          <% @property.photos.each do |photo| %>
            <li><a class="thumb" href="<%= photo.image.url %>"></a></li>
            
          <%end%>
        <%else%>
          <h4><center>No Images</center></h4><br> 
        <%end%>
      </ul>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <h4><strong>Property Details</strong></h4><br>
    <div class="row">
      <div class="col-md-5">
        <label for="property_Name_of_Property">Name of property:</label><br>
      </div>
      
      <div class="col-md-7">
        <%= @property.name %>
      </div>
    </div>

   <div class="row">
      <div class="col-md-5">
        <label for="phone_number">Phone number:</label><br>
      </div>
      
      <div class="col-md-7">
        <%= @property.phone_number %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-5">
        <label for="phone_number">Email:</label><br>
      </div>
      
      <div class="col-md-7">
         <%= @property.email %>
      </div>
    </div>


    <div class="row">
      <div class="col-md-5">
        <label for="phone_number">Property Type:</label><br>
      </div>
      <div class="col-md-7">
        <%= property_type %>
      </div>
    </div><br>

    <div class="row">
      <div class="col-md-5">
        <label for="phone_number">No of seats:</label><br>
      </div>
      
      <div class="col-md-7">
        <%= @property.no_of_seats %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-5">
        <label for="phone_number">Contact person:</label><br>
      </div>
      
      <div class="col-md-7">
        <%= @property.contact_person %>
      </div>
    </div>
    

    <div class="row">
      <div class="col-md-5">
        <label for="phone_number">Address:</label><br>
      </div>
      
      <div class="col-md-7">
        <%= @property.address %>
      </div>
    </div>


    
    <div class="row">
      <div class="col-md-5">
        <label for="phone_number">Facilities:</label><br>
      </div>
      
      <div class="col-md-7">
        <%= property_facilities %>
      </div>
    </div><br>

    <div class="row">
      <div class="col-md-5">
        <label for="phone_number">Access day:</label><br>
      </div>
      
      <div class="col-md-7">
         <%= property_access_day %>
      </div>
    </div><br>

    <div class="row">
      <div class="col-md-5">
        <label for="phone_number">Opening hours:</label><br>
      </div>
      
      <div class="col-md-7">
       Start Date:<%= property_date(@property.start_date) %><br>
       End Date: <%= property_date(@property.end_date) %>
      </div>
    </div>
  </div>

  <div class="col-md-2">
    <% if user_signed_in? %>
      <% if user_role_owner %>
        <% if @property.user == current_user%>
          <%= link_to 'Edit Property', "javascript:void(0)" ,class: "btn btn-primary" %><br><br>
        <%end%>  
      <%end%>
    <%end%>    
    <%= link_to 'Book Now', "javascript:void(0)" ,class: "btn btn-primary" %>
  </div>
</div><br><br>



