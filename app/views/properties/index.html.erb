<script src="/assets/modernizr.custom.js" type="text/javascript"></script>
<script src="/assets/jquery.cbpContentSlider.min.js" type="text/javascript"></script>
<script>
  $(function () {
      "use strict";
      $('#cbp-contentslider').cbpContentSlider();
  });
</script>
