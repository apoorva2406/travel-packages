<h3><center>Search Property</center></h3>
<div class="container">
  <div class="row">

    <div class="col-md-5">
      <div class="search-results-title">
        <i class="fa fa-search"></i>
        <p><%= @properties.present? ? @properties.size : 0%></p>
        <p>results found.</p>
      </div>
      <%=render 'pages/filter'%>
    </div>

    <div class="col-md-7 effect-5 effects">
      <div class="main-switcher">
        <div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
          <div class="txt-sort">
            <p>Sort result:</p>
          </div>
          <div class="click-nav">
            <ul class="no-js">
              <li>
                <a class="clicker">Price</a>
                <ul>
                  <li><span class="btn sort active" data-sort="random">Random</span></li>
                  <li><span class="btn sort" data-sort="value:asc">Ascending</span></li>
                  <li><span class="btn sort" data-sort="value:desc">Descending</span></li>
                </ul>
              </li>
            </ul>
          </div>
          <div class="click-nav-location">
            <ul class="no-js">
              <li>
                <a class="clicker">Location</a>
                <ul>
                  <li><span class="btn filter active" data-filter="all">All</span></li>
                  <li><span class="btn filter" data-filter=".category-1">City</span></li>
                  <li><span class="btn filter" data-filter=".category-2">Sea</span></li>
                  <li><span class="btn filter" data-filter=".category-3">Middle</span></li>
                </ul>
              </li>
            </ul>
          </div>
          <div class="cbp-vm-options">
            <a href="#" class="cbp-vm-icon cbp-vm-grid cbp-vm-selected" data-view="cbp-vm-view-grid"><i class="fa fa-th-large"></i></a>
            <a href="#" class="cbp-vm-icon cbp-vm-list" data-view="cbp-vm-view-list"><i class="fa fa-th-list"></i></a>
          </div>

          <ul id="Grid" class="sandbox">
            <% @properties.each do |property|%>
              <li class="mix category-1" data-value="1250">
                <figure>
                  <div class="cbp-vm-image img">
                    <img src="<%=property_photo(property)%>" alt="img01"/>
                    <div class="overlay">
                      <%= link_to "+", property_path(property), :"data-no-turbolink" => false, :class=>"expand" %>
                      <a class="close-overlay hidden">x</a>
                    </div>
                  </div>

                  <figcaption>
                    <h3><%= truncate(property.try(:contact_person), length: 15) %></h3>
                    <!-- <img class="star-level" src="/assets/5star.png" alt="" /> -->
                    <div class="clear"></div>
                    <p><%=truncate(property.try(:description),length: 75)%></p>
                    <%=property_seats_price(property)%>
                    <a href="<%=property_path(property)%>" class="btn btn-primary btn-gallery">Read More</a>
                  </figcaption>
                </figure>
              </li>
            <%end%>  
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>


<script src="/assets/modernizr.js" type="text/javascript"></script>
<script src="/assets/jquery-migrate-1.2.1.min.js" type="text/javascript"></script>
<script src="/assets/jquery-ui-1.10.4.custom.min.js" type="text/javascript"></script>
<script type="text/javascript" src="/assets/bootstrap.min.js"></script> 
