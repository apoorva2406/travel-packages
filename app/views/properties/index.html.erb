<h1>Listing Properties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Type</th>
      <th>No of seats</th>
      <th>Contact person</th>
      <th>Address</th>
      <th>Facilities</th>
      <th>Access day</th>
      <th>Opening hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.phone_number %></td>
        <td><%= property.email %></td>
        <td><%= property.type %></td>
        <td><%= property.no_of_seats %></td>
        <td><%= property.contact_person %></td>
        <td><%= property.address %></td>
        <td><%= property.facilities %></td>
        <td><%= property.access_day %></td>
        <td><%= property.opening_hours %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

