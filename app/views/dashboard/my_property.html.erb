<script>
  $(function () {
      "use strict";
      $('#cbp-contentslider').cbpContentSlider();
  });
</script>
<!--List-->
<script src="/assets/cbpViewModeSwitch.js" type="text/javascript"></script>
<script src="/assets/classie.js" type="text/javascript"></script>
<script src="/assets/script.js" type="text/javascript"></script>
<script src="/assets/jquery.mixitup.js" type="text/javascript"></script>

<script type="text/javascript">
  $(function () {
      "use strict";
      $('#Grid').mixItUp();
  });
</script>
