                          <option label="Mumbai" value="Mumbai">Mumbai</option>
                          <option label="Pune" value="Pune">Pune</option>
                        </select>
                      </div>
                    </div>

                    <div class="col-md-3">
                      <div class="form-group">
                        <h3>Desire locality</h3>
                        <input type="text" class="form-control" placeholder="Enter your desire locality" id="search_desire" name="desire_location">
                      </div>
                    </div>


                    <div class="col-md-3">
                      <h3>Office Type</h3>
                      <div class="form-group">
                        <select class="form-control" name="search_office_type[]" id="search_office_type" multiple="" required="required">
                          <% PropertyType.all.each do |type| %>
                            <option value="<%=type.name%>"><%=type.name%></option>
                          <%end%>
                        </select>
                      </div>
                    </div>

                    <div class="col-md-2 colbtn">
                      <h3>&nbsp;</h3>
                      <button type="submit" class="btn btn-primary btn-block">Search</button>
                    </div>

                    <div class="col-md-2 colbtn">
                      <h3>&nbsp;</h3>
                      <input type="hidden" id="near_me" name="near_me" value="" />
                      <button type="submit" class="btn btn-primary btn-block" id="search_near_me">Near me</button>
                    </div>

                  </form>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </div>

    <div class="home-page removeslide">
      <!-- SLIDER -->
      <div class="fullwidthbanner-container">
        <div class="fullwidthbanner">
          <ul>
            <!-- FADE -->
            <li data-transition="fade" data-slotamount="10" data-thumb="">
              <img src="/assets/space1.jpg" alt=""/>
            </li>
            <!-- SLIDEUP -->
            <li data-transition="slideup" data-slotamount="7" data-thumb="">
