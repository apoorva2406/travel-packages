            </li>
            <!-- SLIDEDOWN -->
            <li data-transition="slidedown" data-slotamount="7" data-thumb="">
              <img src="/assets/space3.jpg" alt=""/>
            </li>
          </ul>
          <div class="tp-bannertimer"></div>
        </div>
      </div>
      <!-- SLIDER END -->
    </div>

    
  </div>
</section>
<!-- TOP OFFERTS -->
<section id="top-offerts" class="box-tr-square">
  <div class="container">
    <div class="row">
      <div class="col-md-12 effect-5 effects">
        <div class="text-center top-txt-title">
          <h2>THE BEST LOCATIONS</h2>
          <p>Find your favorite place, feel more than home</p>
        </div>
        <%if @properites.present? %>
          <% @properites.take(6).each do |property|%>
            <div class="col-md-4 col-xs-12 commo_boxes view view-fifth">
              <figure class="triggerAnimation animated" data-animate="fadeInDown">
                <div class="img">
                  <a href="<%=property_path(property)%>"><img src="<%=property.try(:photos).first.try(:image).url%>" alt=""/></a>
                </div>
              </figure>
              <div class="mask">
                <div class="main">
                  <div class="trip-title">
                    <h3><%=truncate(property.try(:name),length: 25)%></h3>
                    <br />
                    <p><%=truncate(property.try(:address), :length=>20)%></p>
                  </div>
                  <div class="price">
                    <p>From</p>
                    RS <%=property.try(:property_prices).first.price%>
                  </div>
                </div>
                <div class="content">
                  <p><span><%=property.try(:description)%>
                  </p>
                  <div class="row">

                    <%facilities = Facility.where(id: JSON(property.facilities))%>
                    <%facilities.each do |facility|%>
                      <div class="col-xs-6">
                        <ul class="list-unstyled">
                          <li><i class="fa fa-check-circle"></i> <%=facility.try(:name)%></li>
                        </ul>
                      </div>
                    <%end%>
                  </div>
                  <!-- <a href="<%=property_path(property)%>" class="btn btn-primary btn-block">Read More</a> -->
                </div>
              </div>
            </div>
          <%end%>
        <%else%>
          <!-- <div class="text-center top-txt-title">
            <h2>No Location</h2>
          </div> -->
        <%end%>  
      </div>
    </div>
  </div>
</section>

