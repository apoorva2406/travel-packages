<br>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
  	<h2><center>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Enter your otp</center></h2>
		  <%= form_tag varified_otp_index_path, :remote=>true do %>
		  <div class="form-group signin_form">
        <label for="signin_email" class="col-sm-2 control-label">
        Otp</label>
        <div class="col-sm-10">
          <%= number_field_tag :otp,nil, autofocus: true, :class=> "form-control", :placeholder=> "Enter otp", :autocomplete=> "off" , :required=>true, :id=>"otp_text"%>
          <span id="otp_error"></span>
        </div>
      </div>

      <div style="float: right;">
        <%= link_to 'Resend otp', resend_otp_otp_index_path, remote:true%>
      </div>

		  <div class="row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-10"><center>
          <%= submit_tag "Submit", :class=>"btn btn-primary btn-sm" %></center>
        </div>
      </div><br><br>
		<% end %>
  </div>
</div>
