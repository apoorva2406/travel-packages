<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">


<div class="row">
  <div class="col-md-12">
    <div class="stepwizard">
      <div class="stepwizard-row">
        <div class="stepwizard-step">
          <%= button_to "1", edit_admin_property_path(@property), :class => "btn btn-default btn-circle", :method => :get%>
          <p>Update Property</p>
        </div>
        <div class="stepwizard-step">
          <button type="button" class="btn btn-primary btn-circle">2</button>
          <p>Add seats</p>
        </div>
      </div><br>
    </div>

  <div class="col-md-10 col-md-offset-1">
    <%= semantic_form_for [:admin, @property] do |f| %>
    	<table class="table">
        <thead>
          <tr>
            <th>Property type</th>
            <th>Number Of Seats </th>
            <th>Booking type</th>
            <th>Hourly Price</th>
            <th>Daliy Price</th>
            <th>Monthly Price</th>
          </tr>
        </thead>  
        <tbody>
            <% @property.property_types.each do |type|%>
              <%property_price = @property.property_prices.where(property_type_id: type.id).first%>

              <tr>
                <td><%=type.name%></td>

                <%if type.name.eql?('Workdesk/Co-working')%>
                  <td><input type="text" class="form-control" placeholder="Enter seats" required="required" name="[price][<%= type.id %>]seats" value="<%=property_price.try(:seats)%>" onkeypress= "return event.charCode >= 48 && event.charCode <= 57"></td>
                  <td>
                    <select class="multiselect-ui form-control step_2_booking_type" name="[price][<%= type.id %>]basic_unit[]" id="property_type_<%=type.try(:id)%>" multiple="" required="required">
                      <% ["Daily","Monthly"].each do |type| %>
                        <option value="<%=type%>" <%="selected" if property_price.basic_unit.include?(type) rescue 0%> ><%=type%></option>
                      <%end%>
                    </select>
                  </td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter hourly price/seat" required="required" name="[price][<%= type.id %>]hourly_price" value="<%=property_price.try(:hourly_price)%>" id="property_type_hourly_<%=type.try(:id)%>" <%=property_price.try(:hourly_price).present? ? '' : 'disabled' %>></td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter daily price/seat" required="required" name="[price][<%= type.id %>]price" value="<%=property_price.try(:price)%>" id="property_type_daily_<%=type.try(:id)%>" <%=property_price.try(:price).present? ? '' : 'disabled' %>></td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter monthly price/seat" required="required" name="[price][<%= type.id %>]monthly_price" value="<%=property_price.try(:monthly_price)%>" id="property_type_monthly_<%=type.try(:id)%>" <%=property_price.try(:monthly_price).present? ? '' : 'disabled' %>></td>

                <%elsif type.name.eql?('Private Office/Team Room')%>
                  <td>
                    <select name="[price][<%= type.id %>]number_of_room" id="<%=type.id%>" class="form-control create_number_of_rooms_private" required>
                      <option value="" disabled="disabled" selected="selected">No of rooms</option>
                      <%rooms = property_type_price(type.id,"rooms") %>

                      <%4.times do |number|%>
                        <option value="<%=number+1%>" <%="selected" if rooms ==number+1 %> ><%=number+1%></option>
                      <%end%>  

                    </select>
                    <table class="table"> 
                      <tbody id="private_room_inputs">
                        <%= property_meeting_children(type.id)%>
                      </tbody>
                    </table>
                  </td>

                  <td>
                    <select class="multiselect-ui form-control step_2_booking_type" name="[price][<%= type.id %>]basic_unit[]" id="property_type_<%=type.try(:id)%>" multiple="" required="required">
                      <% ["Hourly","Daily"].each do |type| %>
                        <option value="<%=type%>" <%="selected" if property_price.basic_unit.include?(type) rescue 0%> ><%=type%></option>
                      <%end%>
                    </select>
                  </td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter hourly price/seat" required="required" name="[price][<%= type.id %>]hourly_price" value="<%=property_price.try(:hourly_price)%>" id="property_type_hourly_<%=type.try(:id)%>" <%=property_price.try(:hourly_price).present? ? '' : 'disabled' %>></td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter daily price/seat" required="required" name="[price][<%= type.id %>]price" value="<%=property_price.try(:price)%>" id="property_type_daily_<%=type.try(:id)%>" <%=property_price.try(:price).present? ? '' : 'disabled' %>></td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter monthly price/seat" required="required" name="[price][<%= type.id %>]monthly_price" value="<%=property_price.try(:monthly_price)%>" id="property_type_monthly_<%=type.try(:id)%>" <%=property_price.try(:monthly_price).present? ? '' : 'disabled' %>></td>

                <% elsif type.name.eql?('Virtual Office')%>
                  <td><input type="hidden" name="[price][<%= type.id %>]seats" value="1"></td>

                  <td>
                    <select class="multiselect-ui form-control step_2_booking_type" name="[price][<%= type.id %>]basic_unit[]" id="property_type_<%=type.try(:id)%>" multiple="" required="required">
                      
                      <% ["Monthly"].each do |type| %>
                        <option value="<%=type%>" <%="selected" if property_price.basic_unit.include?(type) rescue 0%> ><%=type%></option>
                      <%end%>
                    </select>
                  </td>


                  <td><input type="text" class="form-control step_2_price" placeholder="Enter hourly price/seat" required="required" name="[price][<%= type.id %>]hourly_price" value="<%=property_price.try(:hourly_price)%>" id="property_type_hourly_<%=type.try(:id)%>" <%=property_price.try(:hourly_price).present? ? '' : 'disabled' %>></td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter daily price/seat" required="required" name="[price][<%= type.id %>]price" value="<%=property_price.try(:price)%>" id="property_type_daily_<%=type.try(:id)%>" <%=property_price.try(:price).present? ? '' : 'disabled' %>></td>

                  
                  <td><input type="text" class="form-control step_2_price" placeholder="Enter monthly price/seat" required="required" name="[price][<%= type.id %>]monthly_price" value="<%=property_price.try(:monthly_price)%>" id="property_type_monthly_<%=type.try(:id)%>" <%=property_price.try(:monthly_price).present? ? '' : 'disabled' %>></td>

                 
                <%elsif type.name.eql?('Meeting/Conference Room')%>
                  <td>
                    <select name="[price][<%= type.id %>]number_of_room" id="<%=type.id%>" class="form-control create_number_of_rooms" required>
                      <option value="" disabled="disabled" selected="selected">No of rooms</option>
                      <%rooms = property_type_price(type.id,"rooms") %>

                      <%4.times do |number|%>
                        <option value="<%=number+1%>" <%="selected" if rooms ==number+1 %> ><%=number+1%></option>
                      <%end%>  

                    </select>
                    <table class="table"> 
                      <tbody id="meeting_room_inputs">
                        <%= property_meeting_children(type.id)%>
                      </tbody>
                    </table>
                  </td>

                  <td>
                    <select class="multiselect-ui form-control step_2_booking_type" name="[price][<%= type.id %>]basic_unit[]" id="property_type_<%=type.try(:id)%>" multiple="" required="required">
                      <% ["Hourly","Daily"].each do |type| %>
                        <option value="<%=type%>" <%="selected" if property_price.basic_unit.include?(type) rescue 0%> ><%=type%></option>
                      <%end%>
                    </select>
                  </td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter hourly price/seat" required="required" name="[price][<%= type.id %>]hourly_price" value="<%=property_price.try(:hourly_price)%>" id="property_type_hourly_<%=type.try(:id)%>" <%=property_price.try(:hourly_price).present? ? '' : 'disabled' %>></td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter daily price/seat" required="required" name="[price][<%= type.id %>]price" value="<%=property_price.try(:price)%>" id="property_type_daily_<%=type.try(:id)%>" <%=property_price.try(:price).present? ? '' : 'disabled' %>></td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter monthly price/seat" required="required" name="[price][<%= type.id %>]monthly_price" value="<%=property_price.try(:monthly_price)%>" id="property_type_monthly_<%=type.try(:id)%>" <%=property_price.try(:monthly_price).present? ? '' : 'disabled' %>></td>

                <%elsif type.name.eql?('Training Room')%>
                  <td>
                    <select name="[price][<%= type.id %>]number_of_room" id="<%=type.id%>" class="form-control create_number_of_rooms_traning" required>
                      <option value="" disabled="disabled" selected="selected">No of rooms</option>
                      <%rooms = property_type_price(type.id,"rooms") %>

                      <%4.times do |number|%>
                        <option value="<%=number+1%>" <%="selected" if rooms ==number+1 %> ><%=number+1%></option>
                      <%end%>  

                    </select>
                    <table class="table"> 
                      <tbody id="meeting_room_inputs_traning">
                        <%= property_meeting_children(type.id)%>
                      </tbody>
                    </table>
                  </td>

                  <td>
                    <select class="multiselect-ui form-control step_2_booking_type" name="[price][<%= type.id %>]basic_unit[]" id="property_type_<%=type.try(:id)%>" multiple="" required="required">
                      
                      <% ["Hourly","Daily","Monthly"].each do |type| %>
                        <option value="<%=type%>" <%="selected" if property_price.basic_unit.include?(type) rescue 0%> ><%=type%></option>
                      <%end%>
                    </select>
                  </td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter hourly price/seat" required="required" name="[price][<%= type.id %>]hourly_price" value="<%=property_price.try(:hourly_price)%>" id="property_type_hourly_<%=type.try(:id)%>" <%=property_price.try(:hourly_price).present? ? '' : 'disabled' %>></td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter daily price/seat" required="required" name="[price][<%= type.id %>]price" value="<%=property_price.try(:price)%>" id="property_type_daily_<%=type.try(:id)%>" <%=property_price.try(:price).present? ? '' : 'disabled' %>></td>

                  <td><input type="text" class="form-control step_2_price" placeholder="Enter monthly price/seat" required="required" name="[price][<%= type.id %>]monthly_price" value="<%=property_price.try(:monthly_price)%>" id="property_type_monthly_<%=type.try(:id)%>" <%=property_price.try(:monthly_price).present? ? '' : 'disabled' %>></td>
                <%end%>
              </tr>
            <%end%>
          </tbody> 
      </table>  
      <center><div style="padding: 28px;"><input type="submit" value="Submit" class="btn btn-primary"></div></center>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    // $('.multiselect-ui').multiselect({
    //   includeSelectAllOption: true,
    //   numberDisplayed: 1
    // });


    $(".step_2_booking_type").on('change', function() {
      var select_box_id = this.id;
      var property_type_id = parseInt(select_box_id.split("_")[2]);
      var select_box_values = $("#"+select_box_id).val();
      $("#property_type_daily_"+property_type_id).attr("disabled",true);
      $("#property_type_monthly_"+property_type_id).attr("disabled",true);
      $("#property_type_hourly_"+property_type_id).attr("disabled",true);
      if (select_box_values.length > 0){
        for (i = 0; i < select_box_values.length; i++) { 
          if (select_box_values[i] == "Daily"){
            $("#property_type_daily_"+property_type_id).attr("disabled",false);
          }
          else if(select_box_values[i] == "Monthly"){
            $("#property_type_monthly_"+property_type_id).attr("disabled",false);
          }
          else if(select_box_values[i] == "Hourly"){
            $("#property_type_hourly_"+property_type_id).attr("disabled",false);
          }
        }
      }
    })

    $(document).on("change",".create_number_of_rooms",function(){
      var value;
      var rows = $("#meeting_room_inputs tr");
      $("#meeting_room_inputs").empty();
      var number = parseInt($(this).val());
      for(var i = 0; i < number; i++) {
        if (rows.find('.form-control')[i]){
          value = rows.find('.form-control')[i].value;
        }
        else{
          value = ''
        }
        var inpt = $('<tr><td>'+(i+1)+'</td><td><input type="text" class="form-control" placeholder="Enter seats" required="required" name="[price][3]room['+(i+1)+']" value="'+value+'" onkeypress= "return event.charCode >= 48 && event.charCode <= 57"></td></tr>');

        $("#meeting_room_inputs").append(inpt);
      }
    });

    $(document).on("change",".create_number_of_rooms_traning",function(){
      var value;
      var rows = $("#meeting_room_inputs_traning tr");
      $("#meeting_room_inputs_traning").empty();
      var number = parseInt($(this).val());
      for(var i = 0; i < number; i++) {
        if (rows.find('.form-control')[i]){
          value = rows.find('.form-control')[i].value;
        }
        else{
          value = ''
        }
        var inpt = $('<tr><td>'+(i+1)+'</td><td><input type="text" class="form-control" placeholder="Enter seats" required="required" name="[price][5]room['+(i+1)+']" value="'+value+'" onkeypress= "return event.charCode >= 48 && event.charCode <= 57"></td></tr>');

        $("#meeting_room_inputs_traning").append(inpt);
      }
    });

    $(document).on("change",".create_number_of_rooms_private",function(){
      var value;
      var rows = $("#private_room_inputs tr");
      $("#private_room_inputs").empty();
      var number = parseInt($(this).val());
      for(var i = 0; i < number; i++) {
        if (rows.find('.form-control')[i]){
          value = rows.find('.form-control')[i].value;
        }
        else{
          value = ''
        }
        var inpt = $('<tr><td>'+(i+1)+'</td><td><input type="text" class="form-control" placeholder="Enter seats" required="required" name="[price][1]room['+(i+1)+']" value="'+value+'" onkeypress= "return event.charCode >= 48 && event.charCode <= 57"></td></tr>');

        $("#private_room_inputs").append(inpt);
      }
    });
  })
</script>


